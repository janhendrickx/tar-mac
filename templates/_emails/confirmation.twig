{# Haal het aantal tickets op #}
{% set aantalTickets = fields.amount.value ?? 0 %}
{% set naam = fields.name.value ?? 0 %}
{% set prijsPerTicket = 12 %}
{% set totaalPrijs = aantalTickets * prijsPerTicket %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
</head>
<body style="font-family: Arial, sans-serif; line-height: 1.6; color: #333;">
    <h2>Nieuwe reservering:</h2>

    <table style="border-collapse: collapse; width: 100%; max-width: 600px;">
        {% for field in fields %}
            <tr>
                <td style="padding: 8px; border-bottom: 1px solid #ddd;"><strong>{{ field.label }}:</strong></td>
                <td style="padding: 8px; border-bottom: 1px solid #ddd;">{{ field.value }}</td>
            </tr>
        {% endfor %}
        <tr>
            <td style="padding: 8px; border-bottom: 2px solid #ddd;"><strong>Prijs per ticket:</strong></td>
            <td style="padding: 8px; border-bottom: 2px solid #ddd;">€ {{ prijsPerTicket|number_format(2, ',', '.') }}</td>
        </tr>
        <tr>
            <td style="padding: 8px; font-weight: bold;"><strong>Totaal:</strong></td>
            <td style="padding: 8px; font-weight: bold;">€ {{ totaalPrijs|number_format(2, ',', '.') }}</td>
        </tr>
    </table>
</body>
</html>